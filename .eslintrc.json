{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "never"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "arrow-parens": ["error", "always"],
    "prefer-template": "error",
    "no-console": "warn",
    "no-unused-vars": "warn"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  }

}
